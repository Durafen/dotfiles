
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
[core]
	excludesfile = ~/.gitignore_global
[help]
	autocorrect = 1
[include]
	path = ~/.gitconfig.local
[alias]
    # execute command in git root: eg git exec make
	exec = "!exec "
    # only files in HEAD
	purge = !/bin/bash -c \"git reset --hard HEAD && git clean -dffx && git submodule update --init\"
	tpush = push
	tpull = pull
	pus = push
	pul = pull
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[push]
	default = current
[pull]
	default = current
[gpg]
    program = gpg2
